<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.omer.bentcam.Homepage">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Devices"
        android:id="@+id/list"
        android:onClick="ClickMenuButtons"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/round"
        android:textColor="@android:color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Device"
        android:id="@+id/adddevice"
        android:onClick="ClickMenuButtons"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/round"
        android:textColor="@android:color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:id="@+id/changepass"
        android:onClick="ClickMenuButtons"
        android:layout_below="@+id/adddevice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/round"
        android:textColor="@android:color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connection Open?"
        android:id="@+id/connectopen"
        android:layout_below="@+id/changepass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="ClickMenuButtons"
        android:background="@drawable/round"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conn"
        android:layout_below="@+id/updatedevices"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Device"
        android:id="@+id/updatedevices"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/connectopen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/round"
        android:textColor="@android:color/white"
        android:layout_alignRight="@+id/connectopen"
        android:layout_alignEnd="@+id/connectopen"
        android:onClick="ClickMenuButtons"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publish Status"
        android:id="@+id/publishbutton"
        android:layout_below="@+id/conn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/round"
        android:textColor="@android:color/white"
        android:layout_alignRight="@+id/updatedevices"
        android:layout_alignEnd="@+id/updatedevices"
        android:onClick="ClickMenuButtons" />

</RelativeLayout>
