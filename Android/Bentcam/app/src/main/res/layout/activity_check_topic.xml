<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.omer.bentcam.checkTopic">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/macAdres"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Enter Mac Address"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#263fff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Topic"
        android:id="@+id/gettopic"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/macAdres"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/round"
        android:textColor="@android:color/white"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12"
        android:onClick="OnClickGetTopic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topic Name"
        android:id="@+id/texttopnamee"
        android:layout_below="@+id/gettopic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="137dp"
        android:textStyle="bold"
        android:textSize="42dp"
        android:textColor="#75bdff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Device"
        android:id="@+id/menubtn"
        android:background="@drawable/round"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/gettopic"
        android:layout_toEndOf="@+id/gettopic"
        android:layout_alignRight="@+id/macAdres"
        android:layout_alignEnd="@+id/macAdres"
        android:onClick="OnClickGetTopic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/texttop"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/texttopnamee"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/menubtn"
        android:layout_alignEnd="@+id/menubtn"
        android:textStyle="bold"
        android:textSize="36dp"
        android:textColor="#183dff" />
</RelativeLayout>
